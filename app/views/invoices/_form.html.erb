<%= simple_form_for(@invoice) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number %>
    <%= f.association :customer %>
    <%# TODO: use datepicker gem  %>
    <%= f.input :invoice_date %>
    <%= f.input :due_date %>
    <%= f.input :total_amount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
