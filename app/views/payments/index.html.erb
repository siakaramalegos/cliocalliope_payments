<h1>Listing Payments</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Invoice</th>
      <th>Invoice Amount</th>
      <th>Total payment</th>
      <th>Customer Notes</th>
      <th>Paid On</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.invoice.description %></td>
        <td><%= number_to_currency payment.invoice.total_amount %></td>
        <td><%= number_to_currency payment.total_payment %></td>
        <td><%= payment.notes %></td>
        <td><%= payment.created_at.try(:stamp, 'May 1, 2015') %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

